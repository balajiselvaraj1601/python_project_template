name: Release Drafter

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  update_release_draft:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Draft release
        uses: release-drafter/release-drafter@v6
        with:
          config-name: .github/release-drafter.yml
